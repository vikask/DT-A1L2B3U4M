%div.span8
  %div.span2
    Your Details
  %div.span3
    = f.label :full_name
    = f.text_field :name
  %div.span2
    = f.label :email
    = f.email_field :email, :class => "span3"
%div.span8
  %div.span2
    Password
  %div.span4
    = f.label :current_password
    = f.password_field :current_password, :autocomplete => "off", :class => "span3", :onkeyup => "return password_enabled(this)"
  %div.span2

  %div.span3
    = f.label :password
    = f.password_field :password, :class => "span3"
  %div.span2
    = f.label :password_confirmation, :class => "span3"
    = f.password_field :password_confirmation, :class => "span3"
  %div.pull-right
    = f.submit "Update", :class => "btn btn-primary"